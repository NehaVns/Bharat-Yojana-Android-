<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yojana.bharat.Detail_scheme">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/flheading"
        android:background="@drawable/toolbar_bg"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_add_new_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"

            >
        </androidx.appcompat.widget.Toolbar>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:src="@drawable/app_logo" />


        <TextView
            android:id="@+id/tv_Category"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Educatoin"
            android:layout_gravity="start"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:textSize="25sp"
            android:gravity="center"
            />

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/menu_icon"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"/>

    </FrameLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/flheading"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        >



        <TextView
            android:id="@+id/tv_scheme_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Scheme Name"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="22dp"
            />

    <ImageView
        android:id="@+id/iv_scheme_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:src="@drawable/item_bg"
        />




        <TextView
            android:id="@+id/tv_Objective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objective:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/tv_Objective_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Des"
            android:textSize="20dp"
            android:layout_margin="20dp"
            />
        <TextView
            android:id="@+id/tv_Eligibility_creteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eligibility Cretaria:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/tv_Eligibility_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eligibility Cretaria:"
            android:textSize="20dp"
            android:layout_marginStart="20dp"

            /><TextView
        android:id="@+id/tv_Eligibility_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eligibility Cretaria:"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        /><TextView
        android:id="@+id/tv_Eligibility_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eligibility Cretaria:"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        />




        <TextView
            android:id="@+id/tv_benefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Benefits:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/tv_benefits_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Des"
            android:textSize="20dp"
            android:layout_margin="20dp"
            />


        <TextView
            android:id="@+id/tv_application_procedure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application Procedure: "
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/tv_application_procedure_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Des"
            android:textSize="20dp"
            android:layout_margin="20dp"

            />


        <TextView
            android:id="@+id/tv_document_required"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Document Required: "
            android:textStyle="bold"
            android:textSize="20dp"
           android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/tv_document_required_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Des"
            android:textSize="20dp"
            android:layout_margin="20dp"

            />












    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>